<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="10dp"
              android:background="@drawable/rect_shape_gradient">

	<ImageView
			android:id="@+id/userinfo_fragment_user_avatar"
			android:contentDescription="@string/connected_user_avatar_description"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="15dp"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

		<TextView
				android:id="@+id/userinfo_fragment_username_textview"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="@string/default_user_name"
				android:layout_marginTop="10dp"
				android:layout_marginRight="10dp"/>

		<TextView
				android:id="@+id/userinfo_fragment_user_description_textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="@string/default_user_description"
				android:layout_marginTop="5dp"
				android:layout_marginRight="10dp"/>
	</LinearLayout>

</LinearLayout>
