<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

	<ImageView
			android:id="@+id/info_friend_avatar_imageview"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="5dp"
			android:layout_marginTop="5dp"
			android:src="@drawable/ic_noavatar"
			android:contentDescription="@string/text_content_description"/>

	<TextView
			android:id="@+id/info_friend_name_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/text_user_name"
			android:layout_marginTop="5dp"
			android:layout_toRightOf="@+id/info_friend_avatar_imageview"/>

	<TextView
			android:id="@+id/info_friend_screen_name_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/screen_name_color"
			android:textSize="12sp"
			android:text="@string/text_user_screen_name"
			android:layout_alignBottom="@+id/info_friend_name_textview"
			android:layout_toRightOf="@+id/info_friend_name_textview"
			android:layout_marginLeft="2dp"/>

	<TextView
			android:id="@+id/info_friend_info_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/text"
			android:layout_marginTop="5dp"
			android:layout_below="@+id/info_friend_name_textview"
			android:layout_toRightOf="@+id/info_friend_avatar_imageview"/>

	<Button
			android:id="@+id/info_button_follow"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/text_unfollow"
			android:layout_marginTop="20dp"
			android:background="@drawable/button_background_set"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:layout_below="@+id/info_friend_info_textview"
			android:layout_centerHorizontal="true"/>
	<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/btn_cancel"
			android:id="@+id/button_close_dialog"
			style="?android:borderlessButtonStyle"
			android:layout_marginTop="20dp"
			android:layout_below="@+id/info_button_follow"
			android:layout_alignStart="@+id/info_friend_avatar_imageview"/>

</RelativeLayout>
