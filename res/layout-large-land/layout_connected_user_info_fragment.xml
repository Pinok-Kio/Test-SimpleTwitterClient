<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/rect_shape_gradient">

	<ImageView
			android:id="@+id/userinfo_fragment_user_avatar"
			android:contentDescription="@string/connected_user_avatar_description"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_gravity="center_horizontal"
			android:layout_margin="10dp"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

		<TextView
				android:id="@+id/userinfo_fragment_username_textview"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="@string/default_user_name"
				android:paddingTop="15dp"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"/>

		<TextView
				android:id="@+id/userinfo_fragment_user_description_textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="@string/default_user_description"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"/>
	</LinearLayout>

</LinearLayout>
